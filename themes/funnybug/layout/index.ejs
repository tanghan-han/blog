<% site.posts.sort('date', theme.index_generator.order_by.date).limit(theme.index_generator.per_page).each(function(post) { %>
	<article class="layui-card" path="<%= url_for(post.path) %>">
		<div class="layui-card-header"><%- post.title %></div>
		<div class="layui-card-body">
			<div class="description">
				<span class="layui-breadcrumb" lay-separator="|">
					<a><cite><i class="fa fa-calendar-o" title="创建时间"></i> <%- date(post.date) %> <%- time(post.date) %></cite></a>
					<% if (post.categories.length) { %>
						<a><cite><i class="fa fa-folder-o" title="分类"></i> 分类：<%- console.log(post.categories) %></cite></a>
					<% } %>
					<a><cite><i class="fa fa-eye" title="阅读次数"></i> 阅读次数：123</cite></a>
					<a><cite><i class="fa fa-file-word-o" title="本文字数"></i> 本文字数：123</cite></a>
					<a><cite><i class="fa fa-clock-o" title="阅读时长"></i> 阅读时长 ≈ 1分钟</cite></a>
				</span>
			</div>
			<div>
				<%- post.excerpt %>
			</div>
			<div class="codes">
				<% post.tags.data.forEach((tag)=>{ %>
					<span class="layui-badge layui-bg-gray">
						<% if (theme.tag.icon) { %>
							<i class="<%- theme.tag.icon %>" aria-hidden="true"></i>
						<% } else { %>
							<i class="fa fa-hashtag" aria-hidden="true"></i>
						<% } %>
						<%- tag.name %>
					</span>
				<% }) %>
			</div>
		</div>
	</article>
<% }); %>