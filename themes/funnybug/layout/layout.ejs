<!DOCTYPE html>
<html langh="en">
<head>
    <title><%- theme.title %></title>
    <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- 引入配置文件 -->
    <%- css('css/main.css') %>
    <!-- fontawesome -->
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	<link href="https://cdn.bootcdn.net/ajax/libs/pure/2.0.3/pure-min.css" rel="stylesheet">
	<!-- bootstrap -->
	<link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
	<!-- layui -->
	<link rel="stylesheet" type="text/css" href="https://www.layuicdn.com/layui/css/layui.css" />
</head>
<body>
	<!-- 引入cdn相关 -->
	<%- include('script.ejs') %>
	<%- include('variable.ejs') %>
	<%- js('js/main.js') %>
	<%- js('js/nav.js') %>
	<%- js('js/page.js') %>
	<header class="layui-layout layui-layout-admin">
		<div class="layui-header header">
			<div class="layui-logo">
				<% if (theme.site.logo) { %>
					<img src="<%= theme.site.logo %>"/>
				<% } %>
				<%= theme.site.title %>
			</div>
			<!-- 引入导航 -->
			<%- include('nav.ejs') %>
		</div>
	</header>
	<!-- 文章列表 -->
	<main class="main layui-layout layui-layout-admin" id="content">
		<%- body %>
		<nav id="pagination">
			<%-
				paginator({
					prev_text: '<i class="fa fa-angle-left"></i>',
					next_text: '<i class="fa fa-angle-right"></i>',
					space: '...',
					mid_size : 1,
					escape   : false
				})	
			%>
		</nav>
	</main>
	<div>
		<a href="javascript:;" id="backTop" title="回到顶部" class="layui-circle"><i class="fa fa-chevron-up" aria-hidden="true"></i></a>
	</div>
</body>
</html>