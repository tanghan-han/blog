<!DOCTYPE html>
<html>
<head>
    <title><%- theme.title %></title>
    <meta charset="utf-8">

    <!-- 引入配置文件 -->
    <%- css('css/main.css') %>
    <!-- 字体图片库 -->
    <%- css('lib/font-awesome/css/font-awesome.min.css') %>
</head>
<body>

	<div id="main">
		<!-- 引入侧边栏 -->
		<aside>
			<%- include('aside.ejs') %>
		</aside>
		<!-- 引入导航 -->
		<nav>
			<%- include('nav.ejs') %>
		</nav>
		<!-- 引入正文 -->
		<div id="content">
			<div id="article">
				<%- body %>
			</div>
		</div> 
	</div>
	<!-- 引入 js 文件 -->
	<%- js('js/main.js') %>
</body>
</html>